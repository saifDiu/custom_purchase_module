<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="product_template_inherit" model="ir.ui.view">
        <field name="name">Product Template Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='barcode']" position="after">
                <field name="gold_purity"/>
                <field name="deduction_percentage_field"/>
            </xpath>

        </field>
    </record>

    <record id="product_template_inherit_deduction" model="ir.ui.view">
        <field name="name">Product Template Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='options']/span[2]" position="after">
                <span class="d-inline-block">
                    <field name="subtotal_deduction_ok"/>
                    <label for="subtotal_deduction_ok"/>
                </span>
                <span class="d-inline-block">
                    <field name="total_deduction_ok"/>
                    <label for="total_deduction_ok"/>
                </span>
            </xpath>

        </field>
    </record>

    <record id="purchase_order_field_inherit" model="ir.ui.view">
        <field name="name">Purchase Order Inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='notes']" position="before">
                <field name="total_deduction_product" placeholder="Total amount deduction"/>
                <field name="total_deduction_amount"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_inherit_view" model="ir.ui.view">
        <field name="name">Account Move Inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals_json']" position="before">
                <field name="dummy_total_amount"/>
            </xpath>
        </field>
    </record>
</odoo>

